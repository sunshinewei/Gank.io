<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/layout_extend"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/green_color_much"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_image_height"
            android:id="@+id/tv_extend_desc"
            android:layout_margin="10dp"
            android:background="@drawable/background_press"
            android:textSize="@dimen/tv_desc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_extend_type"
            android:textSize="@dimen/tv_who"
            android:layout_below="@+id/tv_extend_desc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_extend_who"
            android:textSize="@dimen/tv_who"
            android:layout_below="@+id/tv_extend_desc"
            android:layout_alignLeft="@+id/tv_extend_type"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>